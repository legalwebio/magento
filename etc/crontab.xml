<?xml version="1.0" ?>

<config
    xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
    xsi:noNamespaceSchemaLocation="urn:magento:module:Magento_Cron:etc/crontab.xsd"
>
    <group id="default">
        <job
            name="legalweb_cloud_config_refresh"
            instance="LegalWeb\Cloud\Model\ConfigLoader"
            method="refresh"
        >
            <config_path>crontab/default/jobs/legalweb_cloud_config_refresh/schedule/cron_expr</config_path>
        </job>
    </group>
</config>
